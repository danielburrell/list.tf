# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# HTML requests
GET     /                           controllers.Application.index()
GET     /                           controllers.Application.privacy()
GET     /                           controllers.Application.about()
GET     /id/:steamId/                           controllers.Application.wanted(steamId: Long)
GET     /openIDCallback                         controllers.Application.openIDCallback()
GET     /login                         controllers.Application.index()
GET     /logout                         controllers.Application.index()
GET     /about                         controllers.Application.index()
GET     /steamDown                         controllers.Application.index()
GET     /sync                         controllers.Application.index()


# HTML partials
GET    /partial/list.html    controllers.Application.wantedPartial()

# JSON requests
GET     /api/getWantedList/:steamId                           controllers.Application.getWantedList(steamId: Long)
POST     /api/addDetail                        controllers.Application.addDetail()
POST     /api/editDetail/detailId/:detailId                           controllers.Application.editDetail(detailId: Long)
POST     /api/deleteDetail/:detailId                           controllers.Application.deleteDetail(detailId: Long)
POST     /api/markAs/:detailId/:state                           controllers.Application.markAs(detailId: Long, state: Long)
POST     /api/markDetailAs/:detailId/:isObtained                           controllers.Application.markDetailAs(detailId: Long, isObtained: Boolean)


GET     /loginStatus                         controllers.Application.loginStatus()
GET     /getName/:steamId                         controllers.Application.getName(steamId: Long)

GET     /api/login                         controllers.Application.login()
GET     /api/logout                         controllers.Application.logout()
GET     /api/openIDCallback                         controllers.Application.openIDCallbackAPI()
GET     /api/sync                         controllers.Application.sync()
GET     /api/markImpossibleHistoric                         controllers.Application.markImpossibleHistoric()
POST     /api/priority/:detailId/:priority                           controllers.Application.setPriority(detailId: Long, priority: Integer)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
